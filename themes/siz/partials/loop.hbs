{{#unless @root.isMobile}} <div class="ad ad-banner-top">{{> ads/criteo id="308277"}}</div> {{/unless}}
{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

<a class="article-link" href="{{url}}">
    <article class="box is-link {{post_class}}">
        {{#if image}}
            <section class="post-image" style="background-image:url({{image}})"></section>
        {{/if}}
        <header class="post-header">
            <h2 class="post-title">{{{title}}}</h2>
        </header>
        <section class="post-excerpt">        
           <p>{{sentenceExcerpt}}</p>       
        </section>
        
        <footer class="post-meta">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
        </footer>
    </article>
</a>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
